package study2;

import java.util.Calendar;
import java.util.Date;

public class DateMain {
	
	public static void main(String[] arg) {
		Date now = new Date();
		System.out.println(now);
		
		Calendar col = Calendar.getInstance();
		System.out.println(col.getTime());
		
		System.out.println(col.get(Calendar.YEAR));
		System.out.println(col.get(Calendar.MONTH+1));
		System.out.println(col.get(Calendar.DATE));
		
	}

}
